!!! Strict
%html{ html_attrs("en_us") }
  %head
    %title Wolfmans Howlings
    %meta{ :content => "text/html; charset=utf-8", "http-equiv" => "content-type" }
    %link{ :href => url(:posts, :format => 'rss'), :rel => "alternate", :title => "RSS", :type => "application/rss+xml" }

    %link{ :href => "/stylesheets/brighthouse.css", :rel => "stylesheet", :media => "screen", :type => "text/css", :charset => "utf-8" }
    %link{ :href => "/stylesheets/local.css", :rel => "stylesheet", :media => "screen", :type => "text/css", :charset => "utf-8" }
    %script{ :src => "/javascripts/jquery.js", :type => "text/javascript"}
    /%script{ :src => "/javascripts/jquery.form.js", :type => "text/javascript"}
    %script{ :src => "/javascripts/application.js", :type => "text/javascript"}
  %body
    #wrapper
      #blog-header
        %h1= link_to "Wolfmans Howlings", url(:posts)
        %h2 A programmers Blog about Programming solutions and a few other issues
      #main-wrapper
        #main-content
          -if session.authenticated?
            %p.logged-in== Logged in as #{User[session.user].name}
          &= message[:notice]
          &= message[:error]
          = catch_content :for_layout
        #sidebar
          = sidebar :google_search
          = sidebar :contact
          = sidebar :links
          = sidebar :syndicate
          = sidebar :categories
          = sidebar :tags
          = sidebar :recent_comments
          = sidebar :index_of_posts
          = sidebar :ads
      #footer
        %p
          Site hosted by
          = link_to "e4 Networks LLC", "http://e4net.com"
          using
          = link_to "wolfmanblog", "http://github.com/wolfmanjm/wolfmanblog/tree/master"
          and
          = link_to "Merb", "http://merbivore.com/"
        %ul
          %li
            = link_to "Brighthouse", "http://www.height1percent.com/pages/brighthouse/"
            theme by
            = link_to "Richard White", "http://www.height1percent.com/"
